{%- extends 'blank.njk' -%}

{% macro link(item) %}
  <a class="py-4 pl-6 pr-12 rounded bg-slate-100 hover:bg-blue-500 hover:text-white" href="{{ item.url }}">
    <b class="text-lg">{{ item.data.title }}</b>
    {% if item.data.variant %}
      ({{ item.data.variant }})
    {% endif %} 
  </a> 
{% endmacro %}


{% set pages = ['pleiepenger', 'sykepenger', 'alderspensjon'] %}

{%- block content -%}
  <div class="grid items-start w-full gap-8 p-12">
    {% for item in pages %}
      <div class="grid flex-1 gap-1">
        {% for item in collections.all | onlyTags('produkt', item) %}
          {{ link(item) }}        
        {% endfor %}
      </div>
    {% endfor %}
  </div>
{% endblock %}