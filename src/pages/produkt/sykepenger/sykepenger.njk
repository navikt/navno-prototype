    {# Innhold #}
    {% for chapter in chapters %}
      {% set chapterIndex = loop.index %}
      <section class="grid grid-flow-row-dense mt-8 col-full grid-cols-combi " id="{{ chapter.data.title | slugify }}" x-data="{ tocOpen: false, isStuck: false }">
        <div class="z-20 grid mt-8 text-lg font-semibold bg-white col-full grid-cols-combi">
          {% if chapter.data.icon %}
          <div class="aspect-square rounded-full grid place-items-center w-1/2 max-w-[4.75ch] bg-green-200 mt-8 mb-4">
            {{ chapter.data.icon | svgContents('w-[3ch] h-[3ch] text-green-800') | safe if chapter.data.icon }}
          </div>
          {% endif %}
          <h2 class="font-bold text-xl/tight text-balance">
            <a href="#{{ chapter.data.title | slugify }}">{{ chapter.data.title }}</a>
          </h2>
        </div>

        {# <div x-show="isStuck" class="sticky top-0 z-10">
          <div 
            class="absolute sm:rounded-b-lg top-0 -inset-x-5 px-5 py-2.5 shadow-lg bg-slate-100 border-b border-slate-200"
            x-show="isStuck"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="-translate-y-full"
            x-transition:enter-end="translate-y-0"
            x-transition:leave="transition"
