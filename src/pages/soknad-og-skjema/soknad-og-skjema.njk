---
title: 'Forslag til oppsett for søknader'
description: 'Forslag til oppsett for søknader'
order: 10
tags: ['template']
bodyClass: 'bg-white'
---
{%- extends 'base-basic.njk' -%}

{%- import "macros/formFields.njk" as form -%}

{% macro stepperList(stepperList) %}
  <ol class="navds-stepper">
    {%- for item in stepperItems -%}
      <li class="navds-stepper__item {{ 'navds-stepper__item--active' if item.state === 'active' }} {{ 'navds-stepper__item--complete' if item.state === 'complete' }}">
        <span class="navds-stepper__line navds-stepper__line--1" aria-hidden="true"></span>
        <span class="navds-stepper__marker" aria-hidden="true">
          {%- if item.state === 'complete' -%}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" focusable="false" aria-hidden="true"><path d="M7 13L10 16L17.5 8.5" stroke="currentColor" stroke-width="2" /></svg>
          {%- else -%}
            {{ loop.index }}
          {%- endif -%}
        </span>
        {%- if item.state === 'complete' -%}
          <a href="#" class="navds-stepper__content">{{ item.text }}</a>
        {%- else -%}
          <span class="navds-stepper__content">{{ item.text }}</span>
        {%- endif -%}
        <span class="navds-stepper__line navds-stepper__line--2" aria-hidden="true"></span>
      </li>
    {%- endfor -%}
  </ol>
{% endmacro %}

{%- block content -%}
  <main class="grid py-8 text-lg grid-cols-layout" x-data="{ stepperOpen: false }">
    <div class="relative col-wide max-w-prose md:max-w-none mx-auto md:mx-0 grid md:grid-cols-[6rem_auto] gap-x-8 items-start mb-12 w-full md:pr-24">

      {# Pictogram #}
      {{ '/src/_includes/svg/pictograms/soknad-og-skjema.svg' | svgContents('w-full h-auto max-w-20 md:ml-2 text-green-800 absolute right-0 -top-3 md:-top-1 md:relative hidden xs:block') | safe }}

      {# Intro #}
      <div class="md:col-start-2 md:row-start-1">
        <h1 class="text-3xl font-semibold leading-tight md:text-5xl md:leading-tight">Søknad om [navn på søknad]</h1>
        <p class="mt-2 text-base tracking-wider uppercase opacity-70">
          Søknad
        </p>
      </div>

      <div class="md:col-start-2 md:grid md:grid-cols-[2.2fr_0.8fr] gap-x-16 items-start gap-4 mt-8 md:mt-16">

        {# Stepper (mobile) #}
        <div class="rounded-lg max-w-prose md:col-start-1 md:hidden">
          <div class="relative px-3 py-2 rounded-md bg-deepblue-50">
            <h2 class="text-2xl font-semibold">Overskrift for steg 5</h2>
            <button class="absolute inset-0 flex items-start justify-end pl-3 pr-4 pt-3.5 rounded-md ring-2 ring-deepblue-50 fine:hover:ring-blue-500" x-on:click="stepperOpen = !stepperOpen">
              <span class="sr-only">Vis seksjoner</span>
              <svg class="flex-none w-6 h-6 -translate-y-px pointer-events-none" x-bind:class="stepperOpen && 'rotate-180'" width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true" focusable="false" >
                <path d="M18 9L12 15L6 9" stroke="currentColor" stroke-width="2" opacity="0.8" />
              </svg>
            </button>
            <div class="mt-1.5 -mx-px mb-2 pointer-events-none -translate-y-px overflow-hidden rounded-full bg-deepblue-100">
              <div class="h-3 bg-deepblue-500" style="width: calc((5 / 14) * 100%)"></div>
            </div>
            <p class="text-base">Steg 5 av 14</p>
          </div>
          <div class="px-3 py-4" x-show="stepperOpen">
            {{ stepperList(stepperItems) }}
          </div>
        </div>

        {# Stepper (desktop) #}
        <div class="hidden mt-6 md:block md:col-start-2 md:row-start-1">
          {{ stepperList(stepperItems) }}
        </div>

        {# Main content #}
        <div class="md:col-start-1 md:row-start-1">
          <div class="max-w-prose">

            {# Step Heading #}
            <div class="hidden md:block">
              <h2 class="text-2xl font-semibold">Overskrift for steg 5</h2>
              <div class="mt-1.5 mb-2  -translate-y-px overflow-hidden rounded-full bg-deepblue-100">
                <div class="h-3 bg-deepblue-500" style="width: calc((5 / 14) * 100%)"></div>
              </div>
              <p class="text-base">Steg 5 av 14</p>
            </div>

            {# FormBlocks #}
            <div class="grid gap-10 mt-10">

              {# Dynamisk feltgruppe #}
              <div x-data="{ showFieldGroup: false }">
                <p class="grid gap-0.5">
                  <span class="font-semibold">Dynamisk feltgruppe</span>
                  <span class="text-base">Beskrivelse ...</span>
                </p>

                <div class="grid mt-2 border border-gray-300 divide-y divide-gray-300 rounded">
                  <div class="relative px-3 py-3 bg-white rounded-t fine:hover:bg-blue-50">
                    <p class="font-semibold">Feltgruppe 1</p>
                    <button class="absolute inset-0 rounded" type="button">
                      <span class="sr-only">Endre eller oppdater info</span>
                    </button>
                  </div>
                  <div class="relative px-3 py-3 bg-white rounded-b fine:hover:bg-blue-50">
                    <p class="font-semibold">Feltgruppe 2</p>
                    <button class="absolute inset-0 rounded" type="button">
                      <span class="sr-only">Endre eller oppdater info</span>
                    </button>
                  </div>
                </div>

                <div class="relative z-50 mt-2 bg-white border border-gray-300 rounded shadow" x-show="showFieldGroup">
                  <div class="p-4 md:p-6">
                  {{ form.textinput({ label: 'Tekstfelt' }) }}
                  <fieldset class="mt-6 ">
                    <legend class="font-semibold">Radioknapper</legend>
                      <p class="text-base">Beskrivelse</p>
                    <ul class="mt-1">
                      <li>{{ form.radio({ label: 'Alternativ 1', name: 'ølkjenwe', id: 'qwerty1' }) }}</li>
                      <li>{{ form.radio({ label: 'Alternativ 2', name: 'ølkjenwe', id: 'qwerty2' }) }}</li>
                      <li>{{ form.radio({ label: 'Alternativ 3', name: 'ølkjenwe', id: 'qwerty3' }) }}</li>
                    </ul>
                  </fieldset>
                  </div>
                  <div class="flex justify-start gap-2 px-4 py-3 rounded-b bg-gray-50">
                    <button class="font-semibold py-2.5 min-w-24 px-4 rounded bg-blue-500 fine:hover:bg-blue-600 text-white" type="button" x-on:click="showFieldGroup = false">Lagre</button>
                    <button class="font-semibold py-2.5 text-blue-500 min-w-24 px-4 rounded ring-2 ring-inset ring-blue-500 fine:hover:bg-blue-50 bg-white mr-auto" type="button" x-on:click="showFieldGroup = false">Avbryt</button>
                    <button class="font-semibold py-2.5 text-red-500 min-w-24 px-4 rounded  fine:hover:bg-red-500 fine:hover:text-white" type="button" x-on:click="showFieldGroup = false">Slett feltgruppe …</button>
                  </div>
                </div>

                <button
                  type="button"
                  class="flex items-center gap-1 py-2 mt-2 font-semibold text-blue-500 group"
                  x-on:click="showFieldGroup = !showFieldGroup"
                  x-show="!showFieldGroup"
                >
                  {{ '/src/_includes/svg/icons/add.svg' | svgContents('w-6 h-6 stroke-semibold') | safe }}
                  <span class="group-hover:underline">Legg til feltgruppe …</span>
                </button>
              </div>

              {% for block in formBlocks %}
              {% if block.type === 'select' %}
                <div class="">
                  <label class="font-semibold" for="country">{{ block.label }}</label>
                  {% if block.description %}
                  <p class="text-base">{{ block.description }}</p>
                  {% endif %}
                  <select id="country" class="w-full px-3 py-2.5 mt-3 bg-white border border-gray-300 rounded appearance-none bg-select hover:border-gray-400">
                    {% for option in block.options %}
                    <option {{ 'checked' if loop.first }}>{{ option.label }}</option>
                    {% endfor %}
                  </select>
                </div>
              {% endif %}


              {% if block.type === 'infobox' %}
              <div class="flex items-start gap-3 p-4 border rounded border-lightblue-200 bg-lightblue-50">
                {{ '/src/_includes/svg/icons/info-colored.svg' | svgContents('w-6 h-6 shrink-0 translate-y-0.5') | safe }}
                <div class="grid gap-1">
                  <h3 class="text-xl font-semibold">Lorem, ipsum dolor sit amet consectetur</h3>
                  <p>Doloribus reprehenderit, odit vel totam ipsam et quisquam iste at inventore dolores fugit itaque deleniti eius tenetur, deserunt qui optio a voluptatibus?</p>
                </div>
              </div>
              {% endif %}

              {% if block.type === 'radios' %}
                <div class="">
                  <fieldset>
                    <legend class="font-semibold">{{ block.legend }}</legend>
                    {% if block.description %}
                      <p class="text-base">{{ block.description }}</p>
                    {% endif %}
                    <ul class="mt-1">
                      {% for option in block.options %}
                        <li>{{ form.radio({ label: option.label, description: option.description, name: block.name, id: (block.name + '-' + option.label | slugify) }) }}</li>
                      {% endfor %}
                    </ul>
                  </fieldset>
                </div>
              {% endif %}

              {% if block.type === 'checkboxes' %}
                <div class="">
                  <fieldset>
                    <legend class="font-semibold">{{ block.legend }}</legend>
                    {% if block.description %}
                      <p class="text-base">{{ block.description }}</p>
                    {% endif %}
                    <ul class="mt-1">
                      {% for option in block.options %}
                        <li>{{ form.checkbox({ label: option.label, description: option.description, name: block.name, id: (block.name + '-' + option.label | slugify) }) }}</li>
                      {% endfor %}
                    </ul>
                  </fieldset>
                </div>
              {% endif %}

              {% if block.type === 'textinput' %}
                <div class="">
                  {{ form.textinput({ label: block.label, description: block.description, id: 'text1' }) }}
                </div>
              {% endif %}

              {% if block.type === 'textarea' %}
                <div class="">
                  {{ form.textarea({ label: block.label, description: block.description, id: 'text2' }) }}
                </div>
              {% endif %}

              {% endfor %}

            </div>
            <div class="grid justify-center grid-cols-4 mt-12 gap-x-2 gap-y-4">
              <button class="col-span-2 px-4 py-2.5 leading-snug font-semibold text-blue-500 bg-white rounded fine:hover:bg-blue-50 ring-2 ring-inset ring-blue-500" type="button">Forrige steg</button>
              <button class="col-span-2 px-4 py-2.5 leading-snug font-semibold text-white bg-blue-500 rounded fine:hover:bg-blue-600" type="button">Neste steg</button>
              <button class="col-span-2 col-start-2 px-4 py-2.5 leading-snug font-semibold text-blue-500 rounded fine:hover:bg-blue-50" type="button">Avbryt …</button>
            </div>
          </div>
        </div>

      </div>

    </div>
</main>
{%- endblock -%}
