---js
{
  pagination: {
    data: "products",
    size: 1,
    alias: "product",
    before: function(data) {
      const filteredData = data.filter(element => element.egenSide === true)
      return filteredData
    }
  },
  eleventyComputed: {
    title: "{{ product.title }}",
    permalink: false
    // permalink: "/produktoversikt/{{ product.title | slugify }}.html"
  }
}
---
{% extends 'base.njk' %}

{% block content %}
  <main class="min-h-[50vh]">
    <div class="grid grid-cols-layout">
      <div class="pt-12 pb-8 col-content">

        <a href="/produktoversikt/?area={{ product.area | slugify }}&taxonomy={{ product.taxonomy | slugify }}" class="font-semibold tracking-wide text-blue-500 uppercase hover:underline">Søknad og skjema fra A til Å</a>
        <h1 class="mt-1 text-5xl font-semibold">{{ product.title | safe }}</h1>
        {% if ingress %}
        <div class="mt-4 text-lg max-w-prose">
          <p class="mt-1 text-xl">{{ product.ingress | safe }}</p>
        </div>
        {% endif %}
      </div>
    </div>

    <div class="grid pb-12 bg-white grid-cols-layout min-h-[40vh]">
      <div class="text-lg col-content">
        <div class="max-w-prose markdown">
          {% include "partials/contentBlocks.njk" %}
        </div>
      </div>
    </div>
  </main>

{% endblock %}

{% block styles %}{% endblock %}
{% block script %}{% endblock %}
