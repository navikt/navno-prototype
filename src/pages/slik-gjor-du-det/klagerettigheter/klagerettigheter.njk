{%- extends 'base.njk' -%}

{%- block content -%}
  {% set chapters = collections.all | onlyTags('klagerettigheter', 'innhold') | sort(false, false, 'data.order') %}

  <main class="grid pt-16 grid-cols-combi" data-theme="sykepenger" x-data="{ showTopAnchor: false }">
    <div class="col-main">
      <div class="text-lg tracking-widest small-caps">{{ category | safe }}</div>
      <h1 class="mt-1 font-extrabold text-3xl/tight text-balance text-[#99185E]">{{ title | safe }}</h1>
      <div class="mt-6 prose text-pretty max-w-prose">
        <p class="text-lg/snug">{{ ingress | safe }}</p>

        {% if audience %}          
        <div class="leading-normal bg-white border  border-slate-300 text-balance {{ 'px-4 py-3 rounded-lg' if audience.style === 'default' }} {{'px-4 py-1 rounded-full w-fit' if audience.style === 'simple' }}">
          {{ audience.text | markdown | safe if audience }}
        </div>
        {% endif %}
      </div>
    </div>

    {# Innholdsfortegnelse #}
    <div class="px-5 py-4 mt-8 border-t-[0.625ch] border-[#99185E] rounded-b-lg bg-[#FEF5F1]" x-intersect:leave="showTopAnchor = true" x-intersect:enter="showTopAnchor = false">
      <h2 class="pb-2 text-base font-semibold">Innhold på siden</h2>
      <ul class="grid gap-4 py-1">
        {% for chapter in chapters.slice(0,-1) %}
        <li class="grid">
          <a class="flex gap-1.5 p-1 -m-1 font-medium text-blue-500 underline group hover:text-blue-700 text-base/snug hover:decoration-2" href="#{{ chapter.data.title | slugify }}">
            {{ '/src/_includes/svg/icons/arrow-right-angle.svg' | svgContents('w-4 h-4') | safe }}
            {{ chapter.data.title }}
          </a>
          {# <p class="pr-4 pl-6 mt-0.5 text-pretty opacity-85">{{ chapter.data.ingress | safe }}</p> #}
        </li>
        {% endfor %}
      </ul>
    </div>

    {# Sticky Chapter TOC #}
    {# <div 
      class="sticky top-0 z-10 isolate col-main" 
      aria-hidden="true"
