{%- extends 'blank.njk' -%}

{% macro link(item) %}
  <div class="relative grid gap-1 py-6 pl-6 pr-8 text-lg rounded bg-slate-100 overflow-clip has-[a:hover]:bg-blue-500 has-[a:hover]:text-white">
    <a class="font-semibold text-blue-600 after:absolute hover:text-white after:z-10 after:inset-0" href="{{ item.url }}">
      {{ item.data.title }}
      {% if item.data.variant %}       
      <span class="italic font-normal">({{ item.data.variant }})</span>
      {% endif %}
    </a>     
    {% if item.data.description %}      
      <p class="text-base text-pretty max-w-prose opacity-85">{{ item.data.description | safe }}</p>
    {% endif %}
  </div> 
{% endmacro %}

{%- block content -%}
  <div class="py-8 grid grid-cols-combi font-[375]">
    <div class="px-8 col-full">
      <a class="inline-flex items-center gap-1 px-3 py-2 mb-4 -mx-3 font-semibold text-blue-600 hover:underline" href="../">
        {{ '/src/_includes/svg/icons/chevron-left.svg' | svgContents('') | safe }}
        <span>Tilbake</span>
      </a>
    </div>

    <div class="grid items-start gap-8 col-container">
      <div class="grid flex-1 gap-1 rounded-xl overflow-clip">
      {% for item in collections.all | onlyTags('omrade', 'listeside') %}
        {{ link(item) }}        
      {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}