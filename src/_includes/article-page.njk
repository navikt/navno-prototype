{%- extends 'base.njk' -%}

{%- block content -%}

  {% set chapters = collections[page.fileSlug] | sort(false, false, 'data.order') %}
  <main class="relative grid items-start pt-16 pb-16 bg-white grid-cols-article toc-highlight" data-theme="sykepenger" x-data="{ chapterIndex: 0 }" style="--scopes: {% for chapter in chapters %}--chapter-{{ loop.index }}{{ ',' if not loop.last else ';' }}{% endfor %}">
    <div class="mb-3 col-pictogram" style="--pictogram: var(--color-deepblue-100)">
      {{ '/src/_includes/svg/piktogrammer/produkter/sykepenger.svg' | svgContents('text-deepblue-900 w-16 h-16 sm:w-20 sm:h-20 -translate-x-1') | safe  }}
    </div>
    <div class="col-main md:col-start-[main] md:col-end-[container]">
      <h1 class="font-bold text-fluid-36-48/tight text-pretty">{{ title | safe }}</h1>
      <div class="mt-4 text-gray-700 text-fluid-12-14 font-regular">
        <span class="px-1.5 py-px border rounded-sm border-slate-300 bg-slate-50">{{ category | safe }}</span>
        {% if audience.current %}
          <span aria-hidden="true" class="inline-block">—</span>
          {{ audience.current | safe }}
        {% endif %}
      </div>
    </div>
    <div class="mt-6 pb-9 col-main">
      <p class="prose text-fluid-18-20 text-pretty">
        {{ ingress | safe }}

        {% if audience.others %}          
          <span>{{ audience.others | markdownInline | safe if audience }}</span>      
        {% endif %}
      </p>
    </div>

    {% block quicklinks %}{% endblock %}

    {# Innholdsfortegnelse #}
    <div class="lg:row-span-4 lg:sticky lg:row-start-2 xl:row-start-2 lg:top-0 col-toc max-h-[99svh] overflow-auto toc" id="toc" x-intersect:leave.margin.-120px.0.0.0="floatingToc = true" x-intersect:enter.margin.120px.0.0.0="floatingToc = false, floatingTocOpen = false">
      <h2 class="flex items-baseline sticky z-10 lg:bg-white top-0 py-2 font-semibold gap-x-0.5 text-fluid-18-20">
        <a href="#toppen">{{ '/src/_includes/svg/icons/document.svg' | svgContents('w-6 h-6 translate-y-1 -translate-x-1') | safe  }}</a>
        <span>Innhold på siden</span>
      </h2>
      <ul class="pr-6 mb-8 text-fluid-16-18/normal opacity-90">
        {% for chapter in chapters %}
        {% set chapterIndex = loop.index %}
        <li class="relative pl-6 not-first:mt-1">
          <div class="hidden lg:block absolute w-2 mt-3.5 rounded-full left-1 aspect-square" x-bind:class="(chapterIndex == {{ chapterIndex }}) && 'bg-slate-600'"></div>
          <a class="inline-block p-1 underline border-transparent hover:text-blue-700 hover:decoration-2 underline-offset-3 decoration-slate-800/40 hover:decoration-blue-700 toc-item" href="#{{ chapter.data.title | slugify }}" style="--for: --chapter-{{ loop.index }}">
            {{ chapter.data.title }}
          </a>
          {% if (chapter.templateContent | tocData).length >= 2 %}           
          <ul class="hidden my-1.5 ml-1 border-l-2 pl-3 mb-6 border-slate-300 lg:block" x-show="chapterIndex == {{ chapterIndex }}">
          {% for item in chapter.templateContent | tocData %}
            <li class="not-first:mt-1">
              <a class="inline-block p-1 underline hover:text-blue-700 decoration-slate-800/40 hover:decoration-blue-700 underline-offset-3 hover:decoration-2" href="#{{ item.id }}">
                <span>{{ item.text }}</span>
              </a>
            </li>
          {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>

    {# Floating TOC #}
    <div 
      class="fixed inset-x-0 bottom-0 z-50 grid justify-items-center open:max-h-screen px-page lg:hidden group"
      x-show="floatingToc" 
      x-transition:enter="transition ease-out duration-150"
      x-transition:enter-start="opacity-0 translate-y-full"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-300"
      x-transition:leave-start="translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-full"
    >
      <div class="h-6 translate-y-2 border-b-8 border-white bg-gradient-to-b from-transparent to-white"></div>

      <details class="relative z-10 flex flex-col justify-center bg-white w-stretch rounded-t-2xl max-w-main ring-2 ring-slate-200 open:ring-white isolate peer" id="floatingToc">
        <summary class="flex rounded-t-2xl z-20 items-baseline py-2 shrink-0 font-semibold bg-slate-100 hover:bg-slate-200 cursor-pointer gap-x-0.5 text-fluid-18-20 px-4">
          {{ '/src/_includes/svg/icons/document.svg' | svgContents('w-6 h-6 translate-y-1 -translate-x-1') | safe  }}
          <span>Innhold på siden</span>
          {{ '/src/_includes/svg/icons/chevron-down.svg' | svgContents('w-6 h-6 ml-auto translate-y-1 -translate-x-1') | safe  }}
        </summary>

        <div class="relative grid grid-rows-[1fr_auto] z-20 overscroll-contain max-h-[95vh] sm:max-h-[60vh] mt-auto overflow-y-auto max-w-main w-full pt-4 pb-8 px-3.5">
          <ul class="text-fluid-16-18/snug">
            {% for chapter in chapters %}
            {% set chapterIndex = loop.index %}
            <li class="relative pl-6 not-first:mt-1">
              <div class="absolute w-2 mt-3 rounded-full left-1 aspect-square" x-bind:class="(chapterIndex == {{ chapterIndex }}) && 'bg-slate-600'"></div>

              <a class="inline-block px-1 py-1 underline hover:text-blue-700 hover:decoration-2 decoration-slate-800/40" href="#{{ chapter.data.title | slugify }}" x-on:click="floatingTocOpen = false">
                {{ chapter.data.title }}
              </a>
              {% if (chapter.templateContent | tocData).length >= 1 %}           
              <ul class="mt-0.5 ml-1 border-l-2 pl-3 mb-6 border-slate-300">
              {% for item in chapter.templateContent | tocData %}
                <li class="py-0.5">
                  <a class="inline-block px-1 py-1 underline text-gray-900/80 hover:text-blue-700 decoration-slate-800/40 hover:decoration-2" href="#{{ item.id }}" x-on:click="floatingTocOpen = false">
                    {{ item.text }}
                  </a>
                </li>
              {% endfor %}
              </ul>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </details>
      <button type="button" class="fixed inset-0 hidden peer-open:block bg-slate-800/25 backdrop-blur-xs -z-0" onclick="document.getElementById('floatingToc').removeAttribute('open')"></button>

      <script>
        const tocLinks = document.getElementById('floatingToc')
        for (const tocLink of tocLinks.children) {
          tocLink.addEventListener("click", (e) => {
            if (e.target.hash !== undefined) {
              tocLinks.removeAttribute('open')
            }
        })
        }
      </script>
    </div>



    {# Innhold #}
    {% for chapter in chapters %}
      {% set chapterIndex = loop.index %}
      <section class="mb-16 prose col-main toc-chapter" id="{{ chapter.data.title | slugify }}" x-intersect:enter.margin.0%.0%.-50%.0%="chapterIndex = {{ chapterIndex }}" style="--is: --chapter-{{ loop.index }}">
        <div class="w-10 h-[0.625ch] bg-deepblue-100 mt-8"></div>
        <h2 class="mt-5 mb-4 -translate-x-0.5 font-semibold text-fluid-32-36/tight text-balance">
          <a href="#{{ chapter.data.title | slugify }}">
            <span>{{ chapter.data.title }}</span>
          </a>
        </h2>

        {# Main Content #}
        {{ chapter.templateContent | markdown | safe }}
      </section>
    {% endfor %}

    <div class="pt-2 mt-12 italic border-t text-fluid-16-18 border-slate-200 col-main">{{ published | safe }}</div>

  </main>

  {% include "partials/kontakt.njk" %}

{%- endblock -%}

