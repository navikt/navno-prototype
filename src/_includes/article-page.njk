{%- extends 'base.njk' -%}

{%- block content -%}

  {% set chapters = collections[chapters] | sort(false, false, 'data.order') %}

  <main 
    class="relative grid items-start pt-16 pb-16 grid-cols-article toc-highlight overflow-clip" 
    x-data="{ chapterIndex: 1 }"
  >
    <div class="mb-3 lg:mt-2 col-pictogram" style="--pictogram: var(--color-brand-purple-light)">
      {{ '/src/_includes/svg/piktogrammer/produkter/sykepenger.svg' | svgContents('text-brand-purple-deep w-16 h-16 sm:w-20 sm:h-20 -translate-x-1') | safe  }}
    </div>
    <div class="col-main md:col-start-[main] md:col-end-[container]">
      <h1 class="font-bold text-fluid-36-48/tight text-balance text-brand-purple-deep">{{ title | safe }}</h1>
      <div class="mt-4 text-gray-700 text-fluid-12-14 font-regular">
        <span class="px-1.5 py-px rounded-sm bg-brand-purple-light">{{ category | safe }}</span>
        {%- if audience.description %}
          <span aria-hidden="true" class="inline-block mx-1">—</span>
          {{- audience.description | safe -}}
        {% endif -%}
      </div>
    </div>
    <div class="mt-6 mb-6 col-main">
      <p class="prose text-fluid-18-20 text-pretty">
        {{ ingress | safe }}

        {% if audience.others %}          
          {{ audience.others | markdownInline | safe if audience }}      
        {% endif %}
      </p>
    </div>

    {% block quicklinks %}{% endblock %}

    {# Innholdsfortegnelse sticky #}
    <div class="lg:row-span-4 lg:sticky bg-white lg:row-start-2 xl:row-start-2 lg:top-0 col-toc max-h-[99svh] overflow-auto toc lg:pr-0" id="toc" x-intersect:enter="tocFixed = false, tocOpen = false" x-intersect:leave="tocFixed = true">
      <h2 class="sticky top-0 z-10 hidden tracking-wider uppercase pt-7 lg:block lg:bg-white text-fluid-14-16 opacity-80" >
        Innhold på denne siden
      </h2>
      <ul class="pb-8 lg:pt-2 lg:text-fluid-16-18/normal">
        {% for chapter in chapters %}
          {% set chapterIndex = loop.index %}
          <li>
            <a class="inline-flex items-baseline py-1.5 pr-4 text-blue-600 underline hover:text-blue-700 hover:decoration-2 underline-offset-3 decoration-slate-800/40 hover:decoration-blue-700" href="#{{ chapter.data.title | slugify }}" x-on:click="tocOpen = false">
              {{ '/src/_includes/svg/icons/right-angle.svg' | svgContents('w-6 h-6 -ml-1 -translate-x-0.5 translate-y-1.5 shrink-0 opacity-85 lg:hidden') | safe  }}
              {{ chapter.data.title }}
            </a>
            {% if (chapter.templateContent | tocData).length >= 2 %}           
            <ul class="hidden pb-1" x-bind:class="(chapterIndex == {{ chapterIndex }}) && 'lg:block'">
              {% for item in chapter.templateContent | tocData %}
              <li>
                <a class="inline-flex py-1.5 pr-4 underline items-baseline text-blue-600 hover:text-blue-700 decoration-slate-800/40 hover:decoration-blue-700 underline-offset-3 hover:decoration-2" href="#{{ item.id }}" x-on:click="tocOpen = false">
                  {{ '/src/_includes/svg/icons/right-angle.svg' | svgContents('w-6 h-6 -ml-1 translate-y-1.5 -translate-x-0.5 shrink-0 opacity-85') | safe  }}
                  <span>{{ item.text }}</span>
                </a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>

    {# Innhold #}
    {% for chapter in chapters %}
      {% set chapterIndex = loop.index %}
      <section class="prose col-main toc-chapter" id="{{ chapter.data.title | slugify }}" x-intersect.margin.25%.0%.-75%.0%="chapterIndex = {{ chapterIndex }}">
        <div class="w-8 h-[0.625ch] bg-brand-purple-faded mt-12"></div>
        <h2 class="mt-4 mb-4 -translate-x-0.5 font-bold text-fluid-28-36/tight text-balance text-brand-purple-deep" id="{{ chapter.data.title | slugify }}">
          <a href="#{{ chapter.data.title | slugify }}">
            <span>{{ chapter.data.title }}</span>
          </a>
        </h2>

        <nav class="lg:hidden lg:text-fluid-16-18/normal">
          {%- set tocLinks = chapter.templateContent | tocData(h3) -%}
          <ul>
          {% for item in tocLinks %}
            <li>
              <a href="#{{ item.id }}" class="inline-flex py-1.5 pr-4 text-blue-600 underline align-baseline hover:text-blue-700 decoration-slate-800/40 hover:decoration-blue-700 underline-offset-3 hover:decoration-2">
                {{ '/src/_includes/svg/icons/right-angle.svg' | svgContents('w-6 h-6 -ml-1 translate-y-0.5 -translate-x-0.5 shrink-0 opacity-85') | safe  }}
                <span>{{ item.text }}</span>
              </a>
            </li>
          {% endfor %}
          </ul>
        </nav>

        {# Main Content #}
        {{ chapter.templateContent | markdown | safe }}
      </section>
    {% endfor %}
    </div>

    <div class="pt-2 mt-12 italic border-t text-fluid-16-18 border-slate-200 col-main">
      {{ published | safe }}
    </div>
  </main>

  {% include "partials/kontakt.njk" %}

{%- endblock -%}


{% block bodyscript %}
  <script>
      const headings = Array.from(document.querySelectorAll('main h2, main h3')).filter((heading) => heading.id != '');
      const highlight = (item, headingId) => {

      }
      const tocLinks = document.querySelectorAll(`.toc a`);

      let observer = new IntersectionObserver(
        (entries, observer) => {
          entries.forEach(
            (entry) => {
              const id = entry.target.id;
              if (entry.isIntersecting) {
                tocLinks.forEach(el => el.classList.remove('tocHighlight'))
                document.querySelector(`.toc a[href="#${id}"]`).classList.add('tocHighlight')
              }
            })
        }, { 
          rootMargin: '2% 0% -88% 0%',
          threshold: 1
        }
      );
      headings.forEach((heading) => {
        observer.observe(heading);
      })
  </script>
{% endblock %}