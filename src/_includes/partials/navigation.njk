{# Navigation (Private) #}
<div class="absolute z-[70] w-full inset-x" x-bind:class="menuOpen ? 'opacity-0 animate-dropdown shadow-xl' : 'hidden'" x-bind:aria-hidden="!menuOpen" x-bind:hidden="!menuOpen" hidden>


  <div class="grid pt-8 pb-12 bg-white border-b border-slate-200 grid-cols-combi">
    <div class="grid gap-x-12 gap-y-12 col-container lg:grid-cols-5 lg:grid-rows-[1fr_auto]">

      {# Omr√•der #}
      <div class="flex-1 row-start-1 lg:grid-flow-col-dense lg:pr-4 lg:col-span-2 lg:col-start-1 lg:row-span-2">
        <h3 class="font-semibold tracking-widest uppercase text-fluid-14-16 opacity-80">{{ menu.areas.title | safe }}</h3>
        <ul class="grid gap-3 mt-3 sm:grid-cols-2 lg:grid-cols-1">
          {%- for link in menu.areas.linkList -%}
            <li class="">
              <a class="inline-flex items-center gap-2 pr-4 leading-normal text-blue-600 rounded group pointer-fine:hover:text-blue-700 pointer-fine:hover:underline" href="#">
                {%- if link.icon -%}
                  <span class="grid p-2 rounded-full bg-blue-50 place-items-center group-hover:bg-deepblue-600 group-hover:text-white">
                    {{ link.icon | svgContents('w-6 h-6') | safe }}
                  </span>
                {%- endif -%}
                <span class="mt-px group-hover:underline">{{ link.text }}</span>
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      {# Snarveier #}
      <div class="flex flex-col lg:col-start-3 lg:col-span-3">
        <h3 class="font-semibold tracking-widest uppercase text-fluid-14-16 opacity-80">{{ menu.shortcuts.title | safe }}</h3>
        <ul class="mt-1 sm:columns-2">
          {%- for link in menu.shortcuts.linkList -%}
            <li class="py-0.5">
              <a class="inline-flex items-center gap-3 px-2 py-1 -mx-2 leading-normal text-blue-600 rounded pointer-fine:hover:text-blue-700 pointer-fine:hover:underline" href="#">
                {%- if link.icon -%}
                  {{ link.icon | svgContents('w-6 h-6 opacity-80') | safe }}
                {%- endif -%}
                <span class="mt-px">{{ link.text }}</span>
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>


    </div>
  </div>


  {# Rollebytte #}
  <div class="grid py-3 bg-white grid-cols-combi">
    <div class="grid content-center -mx-1 col-container xs:gap-2 sm:gap-6 xs:text-center sm:mx-0 sm:justify-center sm:grid-flow-col max-w-wide lg:mx-auto">   
    <p>Bytt til sider for <a class="text-blue-600 underline underline-offset-2 hover:decoration-2" href="#">arbeidsgiver</a> eller <a class="text-blue-600 underline underline-offset-2 hover:decoration-2" href="#">samarbeidspartner</a>
    {# {% for role in menu.audience %}
      <a href="#" class="block rounded-full py-1 px-5 {{ 'bg-blue-500 text-white font-semibold' if activeRole === role.title else 'hover:underline transition' }}">{{ role.title }}</a>
    {% endfor %} #}
    </div>
  </div>
</div>
