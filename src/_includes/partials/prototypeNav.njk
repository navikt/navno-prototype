<aside x-ref="prototypeMenu" aria-label="Sider i prototypen" class="flex flex-row min-h-screen font-mono text-white bg-deepblue-900 px-xs-2xl">
  <div class="w-full mx-auto mt-auto max-w-wide pb-sm-md">
    <h2 class="text-sm font-semibold tracking-widest uppercase col-wide text-deepblue-300">Sider i prototypen</h2>
    <ul class="mt-4 col-wide md:text-lg">
    {% set pages = collections.template | sort(false, false, 'data.order') %}
    {%- for page in pages -%}
      <li class="grid items-center justify-start py-4 border-t border-deepblue-700 min-h-24">
        <a href="{{ page.url }}" class="inline-block fine:hover:text-blue-300 fine:hover:underline decoration-from-font underline-offset-4">
          {{ page.data.title | safe }}
        </a>
        {% if page.data.type %}
        <span class="block text-sm uppercase text-deepblue-200">{{ page.data.type | safe }}</span>
        {% endif %}
      </li>
    {%- endfor -%}
    </ul>
  </div>
</aside>
