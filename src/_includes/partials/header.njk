<header class="relative z-10 bg-white {% if page.fileSlug === 'forsiden' %}shadow{% endif %}">
  <div class="hidden px-5 border-b border-gray-300 sm:px-8 sm:block">
    <ul class="flex justify-center gap-4 sm:gap-8" role="tablist">
      <li role="tab" aria-selected="true" class="flex">
        <a href="#" class="pt-2.5 pb-2 border-b-3 border-blue">
          Privatperson
        </a>
      </li>
      <li role="tab" aria-selected="false" class="flex">
        <a href="#" class="pt-2.5 pb-2 border-b-3 border-white hover:border-blue">
          Arbeidsgiver
        </a>
      </li>
      <li role="tab" aria-selected="false" class="flex">
        <a href="#" class="pt-2.5 pb-2 border-b-3 border-white hover:border-blue">
          Samarbeidspartner
        </a>
      </li>
    </ul>
  </div>
  <div class="relative px-5 py-6 sm:px-8">
    <div class="max-w-screen-xl mx-auto xs:w-11/12">
      <div class="flex items-center w-full gap-4">
        <a href="#" class="block mr-4 -ml-3.5">
          <svg viewBox="0 0 84 53" width="84" height="53" aria-hidden="true" focusable="false">
            <path fill="#c30000" fill-rule="evenodd" clip-rule="evenodd" d="M39.1 52.9c-14.4 0-26.4-12-26.4-26.4S24.7.1 39.1.1c14.4 0 26.4 12 26.4 26.4 0 14.4-12 26.4-26.4 26.4zM5.4 24.7 0 38h5.2l5.4-13.3H5.4zM66.5 38l5.3-13.3h2.8L69.4 38h-2.9zm15.8-13.3L77 38h1.5l5.3-13.3h-1.5z"/>
            <path fill="#fefefe" d="M56.9 24.7s-.3 0-.4.3l-2.6 7.9-2.6-7.9c-.1-.3-.4-.3-.4-.3h-9c-.2 0-.4.2-.4.4v2.7c0-2.1-2.3-3.1-3.6-3.1-3 0-5 2-5.6 5 0-2-.2-2.7-.7-3.4-.3-.4-.6-.7-1-.9-.8-.5-1.5-.6-3-.6h-1.8s-.3 0-.4.3L23.6 29v-4c0-.2-.2-.4-.4-.4H19s-.3 0-.4.3L17 29.2s-.2.4.2.4h1.6v8.1c0 .2.2.4.4.4h4.1c.2 0 .4-.2.4-.4v-8.1h1.6c.9 0 1.1 0 1.5.2.2.1.4.2.5.4.2.4.3.9.3 2.4v5.1c0 .2.2.4.4.4h4s.4 0 .6-.4l.9-2.2c1.2 1.6 3.1 2.6 5.5 2.6h.5s.4 0 .6-.4l1.5-3.8v3.9c0 .2.2.4.4.4h4s.4 0 .6-.4l1.6-4c.1-.3-.4-.3-.4-.3h-1.4v-6.9l4.5 11.3c.2.4.6.4.6.4h4.8s.4 0 .6-.4l5-12.5c.2-.4-.3-.4-.3-.4l-4.7-.3zm-15.4 8.5h-2.7c-.5 0-1.1-.2-1.4-.5-.8-.7-.8-2.1 0-2.8.2-.2.4-.3.7-.4.2-.1.5-.1.8-.1h.8a2 2 0 0 1 2 2v1.8z"/>
          </svg>
          <span class="sr-only">NAV</span>
        </a>
        <div class="flex items-center flex-1 gap-1 ml-auto sm:gap-4 sm:ml-0">
          <a class="px-2 py-2 ml-auto text-xl rounded sm:px-4 sm:order-1 sm:border-2 sm:border-blue text-blue" href="#">Logg inn</a>

          <button class="flex items-center gap-2 px-3 py-2 -mr-3 text-xl rounded text-blue" type="button" x-on:click="menuOpen = !menuOpen, searchOpen = false">
            <svg class="w-6 h-6" viewBox="0 0 28 28" width="28" height="28" fill="currentColor"><path d="M28 7H0V4H28V7ZM28 15H0V12H28V15ZM0 23H28V20H0V23Z" /></svg>
            <span>Meny</span>
          </button>

          <button class="hidden gap-1 px-3 py-2 text-xl rounded sm:items-center text-blue sm:flex" x-on:click="searchOpen = !searchOpen, menuOpen = false">
            <svg class="w-6 h-6" viewBox="0 0 28 28" width="28" height="28" fill="currentColor"><path d="M3.5 12C3.5 8.41015 6.41015 5.5 10 5.5C13.5899 5.5 16.5 8.41015 16.5 12C16.5 15.5899 13.5899 18.5 10 18.5C6.41015 18.5 3.5 15.5899 3.5 12ZM10 2.5C4.75329 2.5 0.5 6.75329 0.5 12C0.5 17.2467 4.75329 21.5 10 21.5C12.6243 21.5 15.0001 20.4359 16.7195 18.7156L25.4966 26.6149L27.5034 24.3851L18.488 16.2712C19.1354 14.9871 19.5 13.5362 19.5 12C19.5 6.75329 15.2467 2.5 10 2.5Z"/></svg>
            <span>Søk</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
<nav class="relative z-10">
  <div class="absolute inset-x-0 z-10 px-5 pt-6 pb-12 bg-white shadow-xl top-full md:px-8" x-bind:class="menuOpen ? 'opacity-0 animate-dropdown' : 'hidden'">
    <div class="max-w-screen-xl mx-auto">
      <div class="gap-3 columns-[42ch] md:gap-6">
        {% for section in menu.sectionList %}
          <div class="pr-4 mb-8 sm:max-w-xs break-inside-avoid">
            <div class="text-xl font-semibold">{{ section.title }}</div>
            <ul class="flex flex-col items-start">
            {% for link in section.linkList %}
              <li class="flex items-start gap-2 mt-2 text-blue hover:text-blue-dark group">
                <svg aria-hidden="true" focusable="false" class="w-5 h-5 -ml-1.5 flex-shrink-0 group-hover:translate-x-1.5 transition-transform group-hover:ease-out group-hover:duration-200" width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M9 5L16 12L9 19.1421" stroke="currentColor" stroke-width="2"/></svg>
                <a class="text-lg leading-tight underline hover:no-underline " href="#">{{ link.text }}</a>
              </li>
            {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="absolute inset-x-0 z-10 px-5 pt-6 pb-12 bg-white shadow-xl top-full md:px-8" x-bind:class="searchOpen ? 'opacity-0 animate-dropdown' : 'hidden'">
    <div class="max-w-screen-xl mx-auto xs:w-11/12 md:w-10/12">
      <form class="flex max-w-lg gap-2 mx-auto">
        <label class="grid gap-1" for="search">
          <span class="sr-only">Søk</span>
        </label>
        <input class="flex-1 p-2 text-lg border-2 rounded border-blue " id="search" type="text">
        <button class="px-6 py-2 text-xl text-white rounded bg-blue" type="submit">Søk</button>
      </form>
    </div>
  </div>
</nav>
<button class="fixed inset-0 w-full h-full bg-black/20" x-bind:class="(menuOpen || searchOpen) ? 'opacity-0 animate-dropdown' : 'hidden'"></button>

