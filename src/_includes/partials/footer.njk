<footer class="grid pb-12 text-white grid-cols-combi bg-deepblue-800" x-bind:inert="menuOpen || myPageOpen">
  <div class="col-container">
    <div class="pt-16">
      <div class="sm:columns-2 md:columns-3">
        {%- for section in footer.links -%}
          <div class="mb-8 sm:pr-8 md:mb-0">
            <h2 class="font-semibold tracking-widest small-caps text-deepblue-300">
              {{ section.title | safe }}
            </h2>
            <ul class="mt-2 mb-7 break-inside-avoid">
              {%- for item in section.linkList -%}
                <li class="py-1.5 pr-3 break-before-avoid">
                  <a class="underline underline-offset-3 decoration-blue-300/70 hover:decoration-2 hover:text-orange-200" href="#">{{ item.text }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endfor -%}

        {# Screensharing #}
        <div class="mt-6">
          <a href="#" class="inline-flex items-center gap-4 px-4 pt-2 pb-1.5  bg-deepblue-600 border rounded-lg border-deepblue-500 hover:border-deepblue-400/50 hover:bg-deepblue-500 hover:shadow-lg hover:text-orange-200">
            <span class="">{{ footer.screenshare.text }}</span>
            {{ footer.screenshare.icon | svgContents("w-6 h-6") | safe }}
          </a>
        </div>
      </div>

    </div>

    <div class="flex flex-col justify-between mt-16 text-fluid-16-18 border-t sm:flex-row-reverse border-white/10">
      <div class="flex flex-col justify-between gap-3 mt-4 sm:gap-6 sm:flex-row sm:self-end">
        {%- for link in footer.legal -%}
          <a class="underline underline-offset-3 decoration-blue-300/70 pointer-fine:hover:decoration-2 pointer-fine:hover:text-orange-200" href="#">{{ link.text }}</a>
        {%- endfor -%}
      </div>

      <div class="grid gap-2 mt-12 sm:mt-4">
        <a href="#" class="cursor-pointer">
          {{ '/src/_includes/svg/logo.svg' | svgContents('h-6') | safe }}
          <span class="sr-only">NAV</span>
        </a>
        <div class="">Arbeids- og velferdsetaten</div>
      </div>

    </div>
  </div>
</footer>
