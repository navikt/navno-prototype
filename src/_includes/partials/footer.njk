
<div class="px-5 text-lg text-white bg-deepblue-800 sm:px-8">
  <div class="max-w-screen-lg mx-auto xs:w-11/12 ">
    <div class="flex flex-col items-center py-3">
      <a class="text-lg text-center" href="#">Til toppen</a>
    </div>
    <div class="grid items-start gap-3 pt-8 pb-12 border-t md:grid-cols-3 md:gap-6 border-white/10">
      <div class="grid items-start col-span-2 gap-3 md:grid-cols-3 md:gap-6">
        {% for section in footer.links %}
          <div class="mb-6 md:mb-0">
            <h2 class="text-xl font-semibold">{{ section.title }}</h2>
            <ul class="mt-2">
              {% for item in section.linkList %}
                <li class="py-1"><a class="underline hover:no-underline" href="#">{{ item.text }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
      <div class="grid gap-3 md:pl-6">
        {% for item in footer.tiles %}
          <a class="flex items-center px-6 py-4 border-2 border-current group rounded-xl" href="#">
            <div class="grid flex-1">
              <h3 class="text-xl group-hover:underline">{{ item.title }}</h3>
              <p class="text-sm">{{ item.description }}</p>
            </div>
            <svg aria-hidden="true" focusable="false" class="block w-5 h-5 -ml-1.5 flex-shrink-0 group-hover:translate-x-1.5 transition-transform group-hover:ease-out group-hover:duration-200" width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M9 5L16 12L9 19.1421" stroke="currentColor" stroke-width="2"/></svg>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
