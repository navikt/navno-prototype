{%- from "macros/button.njk" import button -%}

{% for block in product.contentBlocks %}

  {% if block.type === 'markdown' %}
    {% for item in block.data %}
      {{ item | markdown | safe }}
    {% endfor %}
  {% endif %}

  {% if block.type === 'actions' %}
  <div class="grid gap-2 pb-8 mt-4 mb-6 border-b border-gray-200 sm:flex">
    {% for item in block.data %}
      {{ button(
        {
          text: item.text,
          href: '/soknad-og-skjema/' + product.title | slugify + '/',
          variant: item.variant
        }
      ) }}
    {% endfor %}
  </div>
  {% endif %}
{% endfor %}
