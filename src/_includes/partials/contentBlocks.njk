{%- from "macros/button.njk" import button -%}

{% if product.contentBlocks %}
  {% for block in product.contentBlocks %}

    {% if block.type === 'markdown' %}
      {% for item in block.data %}
        {{ item | markdown | safe }}
      {% endfor %}
    {% endif %}

    {% if block.type === 'actions' %}
    <div class="px-4 pt-3 pb-4 bg-gray-100 rounded-lg lg:-ml-4">
      <p class="font-semibold">{{ block.title | safe }}</p>
      <div class="flex flex-wrap items-baseline gap-2 mt-2">
        {% for item in block.data %}
          {{ button(
            {
              text: item.text,
              variant: item.variant
            }
          ) }}
        {% endfor %}
      </div>
    </div>
    {% endif %}
  {% endfor %}
{% else %}
  <p>Innhold mangler â€¦</p>
{% endif %}
