{%- macro button(params) -%}

  {%- set default = "bg-blue-50 text-blue-600 hover:bg-blue-100" -%}

  {%- if params.variant -%}
    {%- if params.variant === "primary" -%}
      {%- set variant = "" -%}
      {# bg-blue-600 hover:bg-blue-600 text-white #}
    {%- endif -%}

    {%- if params.variant === "secondary" -%}
      {%- set variant = "" -%}
    {%- endif -%}
  {%- endif -%}

  <a href="{{ params.href or '#' }}" class="font-medium rounded text-center py-2 px-6 no-underline {{ variant or default }} {{ params.class }}">
    <span>{{ params.text | safe }}</span>
  </a>
{%- endmacro -%}
