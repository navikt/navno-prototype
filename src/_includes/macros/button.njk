{%- macro button(params) -%}

  {%- set default = "" -%}

  {%- if params.variant -%}
    {%- if params.variant === "primary" -%}
      {%- set variant = "" -%}
    {%- endif -%}

    {%- if params.variant === "secondary" -%}
      {%- set variant = "" -%}
    {%- endif -%}
  {%- endif -%}

  <a href="{{ params.href or '#' }}" class="bg-white hover:bg-blue-500 hover:text-white font-medium border-blue-600 border-2 rounded-lg text-center py-2 px-8 no-underline {{ variant or default }} {{ params.class }}">
    <span>{{ params.text | safe }}</span>
  </a>
{%- endmacro -%}
