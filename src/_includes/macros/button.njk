{%- macro button(params) -%}

  {%- set default = "" -%}

  {%- if params.variant -%}
    {%- if params.variant === "primary" -%}
      {%- set variant = "font-medium" -%}
    {%- endif -%}

    {%- if params.variant === "secondary" -%}
      {%- set variant = "" -%}
    {%- endif -%}
  {%- endif -%}

  <a href="{{ params.href or '#' }}" class="bg-blue-50 rounded-full hover:bg-blue-500 hover:text-white text-center py-2 px-5 no-underline {{ variant or default }} {{ params.class }}">
    <span>{{ params.text | safe }}</span>
  </a>
{%- endmacro -%}
