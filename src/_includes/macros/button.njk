{%- macro button(params) -%}

  {%- set default = "bg-white border-2 border-blue-500 text-blue-600 hover:bg-blue-500 hover:text-white focus-visible:outline-3 focus-visible:outline-blue-600 focus-visible:outline-offset-0" -%}

  {%- if params.variant -%}
    {%- if params.variant === "primary" -%}
      {%- set variant = "" -%}
      
      {# bg-blue-600 hover:bg-blue-600 text-white #}
    {%- endif -%}

    {%- if params.variant === "secondary" -%}
      {%- set variant = "" -%}
    {%- endif -%}
  {%- endif -%}

  <a href="{{ params.href or '#' }}" class="font-medium rounded-md text-center pt-2 pb-1.5 px-5 no-underline {{ variant or default }} {{ params.class }} button">
    <span>{{ params.text | safe }}</span>
  </a>
{%- endmacro -%}
