{%- macro button(params) -%}

  {%- set buttonClasses = "bg-white border-2 border-blue-500 text-blue-600 focus:outline-none focus:ring focus:ring-blue-800 focus:ring-offset-1 focus:ring-offset-white" -%}

  {%- if params.variant -%}
    {%- if params.variant === "primary" -%}
      {%- set variant = "bg-blue-500 text-white border-blue-500 fine:hover:bg-blue-700 fine:hover:border-blue-700 focus:outline-none focus:ring focus:ring-blue-800 focus:ring-offset-1 focus:ring-offset-white" -%}
    {%- endif -%}

    {%- if params.variant === "secondary" -%}
      {%- set variant = "bg-white text-blue-500 border-blue-500 fine:hover:border-blue-600 fine:hover:text-blue-700 fine:hover:bg-blue-50 focus:outline-none focus:ring focus:ring-blue-800 focus:ring-offset-1 focus:ring-offset-white" -%}
    {%- endif -%}
  {%- endif -%}

  <a href="{{ params.href or 'javascript:void(0);' }}" class="inline-flex items-center gap-2 px-6 py-2.5 no-underline rounded font-semibold leading-tight text-center justify-center shadow-sm border-2 ring-1 ring-black/5 {{ variant or buttonClasses }} {{ params.class }}">
    <span>{{ params.text | safe }}</span>
  </a>
{%- endmacro -%}
