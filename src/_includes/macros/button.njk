{% macro button(params) %}

  {% set buttonClasses = "bg-white border-2 border-blue-500 text-blue-600" %}

  {% if params.variant %}
    {% if params.variant === "primary" %}
      {% set variant = "bg-blue-500 text-white border-blue-500 hover:bg-blue-700 hover:border-blue-700" %}
    {% endif %}

    {% if params.variant === "secondary" %}
      {% set variant = "bg-white text-blue-500 border-white hover:border-blue-500 hover:text-blue-600" %}
    {% endif %}
  {% endif %}

  <a href="{{ params.href or '#' }}" class="inline-flex items-center gap-2 px-6 py-2.5 no-underline rounded font-semibold leading-tight text-center justify-center shadow-sm border-2 ring-1 ring-black/5 {{ variant or buttonClasses }} {{ params.class }}">
    <span>{{ params.text | safe }}</span>
  </a>
{% endmacro %}
