{%- macro button(params) -%}

  {%- set default = "" -%}

  {%- if params.variant -%}
    {%- if params.variant === "primary" -%}
      {%- set variant = "bg-blue-600 hover:bg-blue-600 text-white" -%}
    {%- endif -%}

    {%- if params.variant === "secondary" -%}
      {%- set variant = "bg-white text-blue-600 hover:bg-blue-50" -%}
    {%- endif -%}
  {%- endif -%}

  <a href="{{ params.href or '#' }}" class="font-medium border-blue-600 border-2 rounded-lg text-center py-2 px-6 no-underline {{ variant or default }} {{ params.class }}">
    <span>{{ params.text | safe }}</span>
  </a>
{%- endmacro -%}
