{% macro tile(args) %}
<!-- Tile -->
<div class="relative pl-5 pr-16 py-4 rounded-lg group leading-tight bg-white ring ring-slate-300 grid justify-start justify-items-start {{ args.theme or "has-[a:hover]:ring-slate-400 transition has-[a:hover]:ring-2 has-[a:active]:ring-slate-200 has-[a:focus-visible]:ring has-[a:focus-visible]:ring-blue-600" }} tile">
  <a class="font-semibold text-blue-600 underline text-pretty after:absolute after:inset-0 focus-visible:outline-none" href="#">
    {{ args.title }}
  </a>
  {%- if args.kicker %}
  <p class="mt-3 font-normal leading-none text-gray-700 inline-block py-1.5 px-2 pointer-events-none bg-slate-100 rounded-sm text-fluid-12-14">
    {%- for item in args.kicker %}{{ item }}{{ ', ' if not loop.last }}{% endfor -%}
  </p>
  {%- endif %}
  {{ '/src/_includes/svg/icons/arrow-right.svg' | svgContents('w-5 h-5 shrink-0 absolute my-auto inset-y-0 right-5 text-blue-600') | safe }}
</div>
{% endmacro %}
