{% macro tile(args) %}
<div class="relative px-5 py-4 rounded-lg group leading-tight border border-slate-300 bg-white {{ args.theme or "has-[a:hover]:bg-blue-50/75 has-[a:active]:border-blue-500 has-[a:active]:bg-blue-50" }}">
  <a class="z-10 flex-1 text-base font-semibold no-underline text-pretty after:absolute after:inset-0 hover:underline hover:decoration-2" href="#">{{ args.title }}</a>
  {%- if args.kicker %}
  <p class="font-medium leading-tight tracking-wide pointer-events-none opacity-70 small-caps">
    {%- for item in args.kicker %}{{ item }}{{ ', ' if not loop.last }}{% endfor -%}
  </p>
  {%- endif %}
</div>
{% endmacro %}
