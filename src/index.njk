---
title: 'Index'
eleventyExcludeFromCollections: true
noJS: true
---
{%- extends 'blank.njk' -%}

{% macro link(item) %}
  <div class="relative grid place-content-start items-center gap-1 pt-5 pb-4 px-6 bg-slate-100 overflow-clip rounded-xl has-[a:hover]:bg-blue-500 has-[a:hover]:text-white">
    <a class="font-semibold text-blue-600 text-lg/tight after:absolute hover:text-white after:z-10 after:inset-0" href="{{ item.url }}">
      {{ item.data.title }}
    </a>     
    {% if item.data.category %}     
      <p class="leading-tight tracking-wider opacity-80 small-caps">{{ item.data.category }}</p>
    {% endif %}
  </div> 
{% endmacro %}

{%- block content -%}
  <div class="py-page lg:py-20 grid grid-cols-combi font-[375]">
    <div class="col-main">
      <div class="grid gap-3">
        {% for item in collections.all | sort(false, false, 'data.order') %}
          {% if item.url %}         
            {{ link(item) }}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}