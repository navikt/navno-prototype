{% extends "blank.njk" %}

{% block style %}
  <style>
    body {
      background-color: #fefefe;
      font-size: 1.125rem;
      color: #404040;
    }
    .prose > :where(*) + :where(*) {
      margin-block-start: 1.75rem;
    }
    .prose > :where(h1, h2, h3, h4) + :where(*) {
      margin-block-start: 0;
    }
    .prose > :where(h1, h2, h3, h4) {
      margin-block-end: 0.5rem;
      font-weight: 600;
      color: #262626;
    }
    .prose > :where(h1) {
      font-size: 2.75rem;
      line-height: 1.1;
      margin-block-end: 0.75rem;
    }
    .prose > :where(h2) {
      font-size: 1.75rem;
      line-height: 1.3;
    }
    .prose > :where(h3) {
      font-size: 1.5rem;
      line-height: 1.3;
    }
    .prose > :where(h4) {
      font-size: 1.125rem;
      line-height: 1.3;
      margin-block-end: 0.25rem;
    }
    {# .prose > :where(h4) {
      font-size: 1.5rem;
      line-height: 1.3;
      letter-spacing: 0.06em;
      text-transform: lowercase;
      font-variant: small-caps;
      margin-block-end: 0.25rem;
    } #}
    .prose > :where(ul, ol) {
      padding-inline-start: 1.3333334em;
    }
    .prose > :where(ul) {
      list-style: disc;
    }
    .prose > :where(ol) {
      list-style: decimal;
      counter-reset: ordered;
    }
    .prose > :where(ul, ol) :where(li) {
      margin-block-start: 0.75rem;
      margin-block-end: 0.25rem;
    }
    .prose > :where(ol) :where(li) {
      counter-increment: ordered;
    }
    .prose > :where(ol) ::marker {
      font-size: 1rem;
      font-variant: small-caps;
      content: counter(ordered) ".â€‚";
      font-weight: 600;
      color: hsl(0 50% 40%);
    }
    .prose > :where(ul) ::marker {
      font-size: 1.25rem;
      color: hsl(0 50% 40%);
      line-height: 1;
    }
    .prose > :where(dl) {
      margin-inline-start: 1.5rem;
    }
    .prose > :where(dl) dd + dt {
      margin-block-start: 0.75rem;
    }
    .prose > :where(dl, p, li) :where(strong, dt, b) {
      font-weight: 600;
    }
    .prose > :where(*) > a {
      text-decoration: underline;
      color: hsl(210 80% 35%);
    }
    .prose > :where(*) > a:hover {
      text-decoration: none;
      color: hsl(210 80% 45%);
    }
    .prose > :where(p) {
      font-size: 1.125rem;
      line-height: 1.555556;
    }
    .prose > :where(p) :where(code),
    .prose > :where(pre) {
      background-color: whitesmoke;
      border-radius: 0.25rem;
      font-size: 1rem;
    }
    .prose > :where(pre) {
      white-space: pre-wrap;
      word-break: break-all;
      padding: 0.5em 0.75em;
    }
    .prose > :where(p) :where(code) {
      margin-inline: 0.125em;
    }
    .prose > :where(small) {
      font-size: 0.875rem;
      display: inline-block;
      color: #595959;
    }
    .prose > :where(blockquote) {
      padding-inline-start: 1rem;
      padding-block: 0;
      margin-inline-start: 0.125rem;
      border-inline-start: 4px solid hsl(0 50% 40%);
      display: inline-block;
    }
    .prose > :where(blockquote) * + * {
      margin-block-start: 1.55556rem;
      display: inline-block;
    }
  </style>
{% endblock %}


